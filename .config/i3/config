# Mod {{{

# Set the mod key to Alt
set $mod Mod1

# }}}

# Startup {{{

# Run polybar
exec_always --no-startup-id ~/.config/polybar/bin/polybar-launch.sh

# Run compton for fast screen redraws and compositing
exec --no-startup-id compton

# Run the network-monitor applet
exec --no-startup-id nm-applet

# }}}

# Looks {{{

# Colors
# https://thomashunter.name/i3-configurator/

# Class                 border  bground text    indicator child_border
client.focused          #333333 #333333 #FFFFFF #333333   #AEA79F
client.focused_inactive #333333 #5F676A #FFFFFF #484E50   #5F676A
client.unfocused        #333333 #222222 #888888 #292D2E   #222222
client.urgent           #2F343A #772953 #FFFFFF #772953   #772953
client.placeholder      #000000 #0C0C0C #FFFFFF #000000   #0C0C0C

# Font for window titles
font pango:Hack Nerd Font Regular 20

# Wallpaper
exec_always --no-startup-id feh --bg-fill ~/configure/wallpaper/mountains.png

# }}}

# Rofi {{{

# Rofi for programs
set $rofi-program "rofi -width 30 -modi 'run' -show run"
bindsym Control+$mod+p exec $rofi-program

# Rofi for .desktop files
set $rofi-desktop "j4-dmenu-desktop --dmenu='rofi -width 30 -p 'dmenu:' -dmenu -i'"
bindsym Control+$mod+n exec $rofi-desktop

# Rofi for windows
set $rofi-windows "rofi -width 50 -modi 'window' -show window"
bindsym Control+$mod+m exec $rofi-windows

# Rofi for system control
bindsym Control+$mod+plus exec "~/bin/rofi-power.sh 'i3-msg exit'"

# Rofi for workspaces
bindsym Control+$mod+b exec "~/bin/switch-i3-workspace.sh"

# Rofi for keymap reminders
set $rofi-reminder "~/.config/i3/scripts/i3-keymaps.sh"
bindsym Control+$mod+r exec $rofi-reminder

# }}}

# Float {{{

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# }}}

# Programs {{{

# Terminal
bindsym $mod+Return exec i3-sensible-terminal

# }}}

# Workspaces {{{

# Define names for default workspaces
# 1 through 10
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
# 10 through 20
set $ws10 "10"
set $ws11 "11"
set $ws12 "12"
set $ws13 "13"
set $ws14 "14"
set $ws15 "15"
set $ws16 "16"
set $ws17 "17"
set $ws18 "18"
set $ws19 "19"
set $ws20 "20"

# Go to the left workspace
bindsym Control+$mod+h workspace prev

# Go to the right workspace
bindsym Control+$mod+l workspace next

# Move window to the workspace on the right
bindsym Control+Shift+h move to workspace prev

# Move window to the workspace on the left
bindsym Control+Shift+l move to workspace next

# Switch to a specified workspace
# 1 through 10
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Switch to a specified (extended) workspace
# 11 through 20
set $mode_switch_workspace "Switch Workspace"
mode $mode_switch_workspace {
    bindsym $mod+1 workspace $ws11; mode "default"
    bindsym $mod+2 workspace $ws12; mode "default"
    bindsym $mod+3 workspace $ws13; mode "default"
    bindsym $mod+4 workspace $ws14; mode "default"
    bindsym $mod+5 workspace $ws15; mode "default"
    bindsym $mod+6 workspace $ws16; mode "default"
    bindsym $mod+7 workspace $ws17; mode "default"
    bindsym $mod+8 workspace $ws18; mode "default"
    bindsym $mod+9 workspace $ws19; mode "default"
    bindsym $mod+0 workspace $ws20; mode "default"
    bindsym Escape mode "default"
}
# Enter the extended workspace switching mode
bindsym $mod+w mode $mode_switch_workspace

# Move focused container to workspace
# 1 through 10
bindsym Control+$mod+1 move container to workspace $ws1
bindsym Control+$mod+2 move container to workspace $ws2
bindsym Control+$mod+3 move container to workspace $ws3
bindsym Control+$mod+4 move container to workspace $ws4
bindsym Control+$mod+5 move container to workspace $ws5
bindsym Control+$mod+6 move container to workspace $ws6
bindsym Control+$mod+7 move container to workspace $ws7
bindsym Control+$mod+8 move container to workspace $ws8
bindsym Control+$mod+9 move container to workspace $ws9
bindsym Control+$mod+0 move container to workspace $ws10

# Move to a specified (extended) workspace
# 11 through 20
set $mode_move_workspace "Move to Workspace"
mode $mode_move_workspace {
    bindsym Control+$mod+1 move container to workspace $ws11; mode "default"
    bindsym Control+$mod+2 move container to workspace $workspace $ws12; mode "default"
    bindsym Control+$mod+3 move container to workspace $workspace $ws13; mode "default"
    bindsym Control+$mod+4 move container to workspace $workspace $ws14; mode "default"
    bindsym Control+$mod+5 move container to workspace $workspace $ws15; mode "default"
    bindsym Control+$mod+6 move container to workspace $workspace $ws16; mode "default"
    bindsym Control+$mod+7 move container to workspace $workspace $ws17; mode "default"
    bindsym Control+$mod+8 move container to workspace $workspace $ws18; mode "default"
    bindsym Control+$mod+9 move container to workspace $workspace $ws19; mode "default"
    bindsym Control+$mod+0 move container to workspace $ws20; mode "default"
    bindsym Escape mode "default"
}
# Enter the extended workspace move mode
bindsym $mod+e mode $mode_move_workspace

# Create a new workspace
bindsym $mod+n exec --no-startup-id ~/bin/create-i3-workspace.sh

# }}}

# Focus {{{

# Change focus with vim keybindings
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Change focus with cursor keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# focus the parent container
bindsym $mod+a focus parent

# }}}

# Split {{{

# Split in horizontal orientation
bindsym $mod+backslash split h
bindsym $mod+Shift+backslash split h

# Split in vertical orientation
bindsym $mod+minus split v
bindsym $mod+Shift+minus split v

# Use fullscreen mode for focused container
bindsym $mod+f fullscreen toggle

# }}}

# Layout {{{

# Change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+i layout toggle split

# Toggle between tiling and floating windows
bindsym $mod+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# }}}

# Move {{{

# Move focused window with vim keybindings
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Move focused window with cursor keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# }}}

# Kill {{{

# Kill focused window
bindsym $mod+Shift+q kill

# }}}

# System {{{

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 inplace
bindsym $mod+Shift+r restart

# Exit i3
bindsym $mod+Shift+e exec i3-msg exit

# Lock i3 screen
bindsym $mod+Shift+o exec --no-startup-id "~/bin/lock-screen.sh"

# }}}

# Resize {{{

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# }}}

# media keys
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5%
bindsym XF86AudioMute exec --no-startup-id pavolume mute
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute 2 toggle

bindsym XF86MonBrightnessUp exec sudo /usr/bin/light -s sysfs/backlight/auto -A 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec sudo /usr/bin/light -s sysfs/backlight/auto -U 5 # decrease screen brightness
