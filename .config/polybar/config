[colors]
; Define colors to be centered by dark grey
; Some of these colors are not used now
background = #333333
background-alt = #dfdfdf
foreground = #dfdfdf
foreground-alt = #555
primary = #616161
secondary = #e60053
alert = #bd2c40
green = #009300
yellow = #E95420
red = #f90000
blue = #0a6cf5

[bar/mybar]
; Define format
width = 100%
height = 40
fixed-center = true

; Set the two basic colors
background = ${colors.background}
foreground = ${colors.foreground}

; Make the lines the same as background
line-size = 3
line-color = ${colors.background}
border-size = 0

; Don't use padding by default
padding-left = 0
padding-right = 0

; Set 1 unit of margin by default
module-margin-left = 1
module-margin-right = 1

; Specify the main font
font-0 = "Hack Nerd Font:size=22;5"

; Specify the icon font
font-1 = "Hack Nerd Font:size=22;5"

; Specify the emphasis font for the i3 workspaces
font-2 = "Hack Nerd Font:size=22:weight=bold;5"

; Display the i3 workspaces on the left
modules-left = i3

; Display multiple modules on the right
modules-right = cpu memory battery0 backlight pulseaudio network date

; Do not display any modules in the middle

; Configure the tray to display the network-manager applet
; Disable the tray and do not display the network-manager applet
; Enable this tray once the polybar bug is fixed and display works
;tray-position = right
;tray-padding = 8
;tray-maxsize = 20
;tray-scale = 1.0
;tray-transparent = true
;tray-detached = true

; Allow the mouse to click and scroll
cursor-click = pointer
cursor-scroll = ns-resize

; Display details about the wireless network
[module/network]
type = internal/network
interface = wlp2s0
interval = 3.0
udspeed-minwidth = 0
format-connected-prefix = " "
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = %essid% 說 %signal%
label-disconnected = Disconnected

; Display the i3 workspaces
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Define simple numbers for workspace indices
ws-icon-0 = 1;1
ws-icon-1 = 2;2
ws-icon-2 = 3;3
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;10
ws-icon-10 = 11;11
ws-icon-11 = 12;12
ws-icon-12 = 13;13
ws-icon-13 = 14;14
ws-icon-14 = 15;15
ws-icon-15 = 16;16
ws-icon-16 = 17;17
ws-icon-17 = 18;18
ws-icon-18 = 19;19
ws-icon-19 = 20;20

; Configure the display of the mode indicator
label-mode-padding = 1
label-mode-margin-left = 5
label-mode-margin-right = 1
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.primary}

; Focused = Active workspace on focused monitor
; This expands to give the full name of the workspace
; Using a separate process will dynamically adjust
; these names depending on the program currently in use
label-focused = %name%
label-focused-font = 3
label-focused-background = ${colors.primary}
label-focused-underline= ${colors.primary}
label-focused-foreground = ${colors.background-alt}
label-focused-padding = 1

; Unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 1

; Visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; Urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; Display the use of the processor
[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
;format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.background}
label = %percentage:2%%

; Display the use of the memory
[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
;format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.background}
label = %percentage_used%%

; Display the date
[module/date]
type = internal/date
interval = 1

date = %a %b %d
time = "%I:%M %p "
label = %date% %time%

format = <label>
format-underline = ${colors.background}

; Display the level of the audio
[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}
format-volume-underline = ${colors.background}

format-muted-prefix = "婢"
label-muted = %percentage%%
label-muted-foreground = #666
format-muted-underline = ${colors.background}

ramp-volume-0 = "奄"
ramp-volume-1 = "奔"
ramp-volume-2 = "墳"

; Display the level of the battery
[module/battery0]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99

label-charging = %percentage%%
format-charging-prefix = " "
format-charging = <label-charging>
format-charging-underline = ${colors.background}

label-discharging = %percentage%%
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${colors.background}

label-full = %percentage%%
format-full-prefix = " "
format-full-underline = ${colors.background}

ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""

; Display backlight details
; Note that this works even though i3 uses light
[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
format-prefix = " "
label = %percentage%%

; Specify some global settings
[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5
